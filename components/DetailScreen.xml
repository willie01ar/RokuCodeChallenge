<?xml version="1.0" encoding="utf-8" ?>
<component name="DetailScreen" extends="BasePage">
  <interface>
    <field id="payload" type="node" onChange="onPayloadChange" alwaysNotify="true" />
  </interface>

  <children>
	<!-- Content -->
	<LayoutGroup id="main"
		layoutDirection="vert"
		itemSpacings="[10]"
		translation="[100, 100]">

		<!-- Content -->
		<LayoutGroup id="content"
			layoutDirection="horiz"
			itemSpacings="[10]">
			<Poster id="poster"
				width="300"
				height="450"
				translation="[50, 50]"/>
			<LayoutGroup id="metadata" 
				layoutDirection="vert">
				<Label id="titleLabel"
					translation="[400, 60]"
					width="800"
					height="60"
					text="Title"
					font="font:LargeSystemFont"
					horizAlign="left"/>

				<Label id="yearLabel"
					translation="[400, 130]"
					width="400"
					height="40"
					text="Year"
					font="font:MediumSystemFont"
					horizAlign="left"/>

				<Label id="movieType"
					translation="[50, 530]"
					width="1180"
					height="200"
					text="Plot"
					font="font:SmallSystemFont"
					horizAlign="left"
					maxLines="6"/>
			</LayoutGroup>
		</LayoutGroup>

		<!-- Controls -->
		<LayoutGroup id="controls"
			layoutDirection="horiz"
			itemSpacings="[20]">
			<Button id="backButton"
				translation="[540, 680]"
				maxWidth="190"
				minWidth="80"
				height="60"
				text="Back"/>

			<Button id="playButton"
				translation="[540, 680]"
				maxWidth="190"
				minWidth="80"
				height="60"
				text="Play"/>
		</LayoutGroup>
	</LayoutGroup>
  </children>

  <script type="text/brightscript" uri="./DetailScreen.brs" />

</component>